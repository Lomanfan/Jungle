<section>
  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

      <%= form_tag '/login' do %>

        <div>Email:</div>  
          <div><%= text_field_tag :email, "", class: 'form-control' %></div>

        <div>Password:</div>
          <div><%= password_field_tag :password, "", class: 'form-control' %></div>

        <br>
        <div><%= submit_tag "Submit", class: 'btn btn-primary'%></div>

      <% end %>

    </div>
  </div>

</section>